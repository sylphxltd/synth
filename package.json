{
  "name": "@sylphx/ast",
  "version": "2.0.0",
  "description": "The world's fastest AST processor - 50-3000x faster than unified",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:watch": "vitest --watch",
    "bench": "turbo run bench",
    "bench:all": "tsx scripts/bench-all.ts all",
    "bench:compare": "tsx scripts/bench-all.ts compare",
    "bench:profile": "tsx scripts/bench-all.ts profile",
    "bench:memory": "tsx scripts/bench-all.ts memory",
    "bench:list": "tsx scripts/bench-all.ts list",
    "lint": "turbo run lint",
    "format": "prettier --write \"packages/**/*.ts\""
  },
  "keywords": [
    "ast",
    "parser",
    "transformer",
    "compiler",
    "markdown",
    "html",
    "functional",
    "composition"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "tsx": "^4.20.6",
    "turbo": "^2.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "mdast-util-to-string": "^4.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.17.1"
}
