{
  "name": "@sylphx/synth-js-format",
  "version": "0.1.0",
  "description": "Prettier-style code formatter for JavaScript/TypeScript using Synth AST",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "keywords": [
    "javascript",
    "typescript",
    "formatter",
    "prettier",
    "code-format",
    "synth",
    "ast"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@sylphx/synth": "workspace:*",
    "@sylphx/synth-js": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  }
}
