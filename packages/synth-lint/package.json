  "keywords": [
    "lint",
    "linter",
    "eslint",
    "ast",
    "synth",
    "universal",
    "rules"
  ],
  "author": "Synth",
  "license": "MIT",
  "dependencies": {
    "@sylphx/synth": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
