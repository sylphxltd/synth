{
  "name": "@sylphx/synth-lint",
  "version": "0.1.0",
  "description": "Universal linter framework for Synth AST - works across all languages",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
